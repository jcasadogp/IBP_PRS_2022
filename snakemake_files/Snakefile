from datetime import date

# === Date for the output plots ===
today = date.today().strftime("%Y-%m-%d")
print("\nToday's date:", today)

# === Directories ===
project_dir = "/staging/leuven/stg_00092/IBP_PRSproject/data/"

# === Prefix of the files  ===
target_files_name = "final_IBP"


rule all:
	input:
		prs_model_fit = expand(project_dir + "002_prsice_results/{name}.prsice", name=target_files_name),
		summary_file = expand(project_dir + "002_prsice_results/{name}.summary", name=target_files_name),
		best_prs = expand(project_dir + "002_prsice_results/{name}.best", name=target_files_name),
		barplot = expand(project_dir + "002_prsice_results/{name}_BARPLOT_" + today + ".png", name=target_files_name),
		high_res_plot = expand(project_dir + "002_prsice_results/{name}_HIGH-RES_PLOT_" + today + ".png", name=target_files_name),
		quantiles_plot = expand(project_dir + "002_prsice_results/{name}_QUANTILE_PLOT_" + today + ".png", name=target_files_name),
		quantiles_text = expand(project_dir + "002_prsice_results/{name}_QUANTILE\_" + today + ".txt", name=target_files_name),
		all_prs = expand(project_dir + "002_prsice_results/{name}.all.score", name=target_files_name),

	shell:
		'''
		echo "SNAKEMAKE FILE FINISHED!!!"
		'''


rule prsice:
	input:
		base = project_dir + "IBD_basefile_hg38_PRS.txt",
		target_fam = project_dir + "{name}.fam",
		target_bed = project_dir + "{name}.bed",
		target_bim = project_dir + "{name}.bim",

		phenotype = project_dir + "final_phenotypes.txt",

# 		covariates = project_dir + "{name}.covariate",

	params:
		target_prefix = "{name}",
		output_prefix = project_dir + "002_prsice_results/{name}"

	output:
		barplot = project_dir + "002_prsice_results/{name}_BARPLOT_" + today + ".png",
		high_res_plot = project_dir + "002_prsice_results/{name}_HIGH-RES_PLOT_" + today + ".png",

		prs_model_fit = project_dir + "002_prsice_results/{name}.prsice",
		summary_file = project_dir + "002_prsice_results/{name}.summary",
		best_prs = project_dir + "002_prsice_results/{name}.best",

		log_file = project_dir + "002_prsice_results/{name}.log",
		
# 		# If --all-score is indicated
		all_prs = project_dir + "002_prsice_results/{name}.all.score",
		
# 		# If --quantile [number of quantile] is indicated
		quantiles_plot = project_dir + "002_prsice_results/{name}_QUANTILE_PLOT_" + today + ".png",
		quantiles_text = project_dir + "002_prsice_results/{name}_QUANTILE\_" + today + ".txt",

		
	shell:
		'''
		Rscript PRSice/PRSice.R \
		    --prsice PRSice/PRSice_linux \
		    --base {input.base} \
		    --snp SNP \
			--chr CHR \
			--bp BP \
			--A1 Allele2 \
			--A2 Allele1 \
			--stat Effect \
			--pvalue P.value \
			--or \
		    --target {params.target_prefix} \
		    --binary-target F \
	 	    --pheno {input.phenotype} \
	 	    --ignore-fid \
		    --base-maf MAF:0.01 \
		    --base-info INFO:0.8 \
		    --all-score \
		    --quantile 4 \
		    --out {params.output_prefix}
		'''

# ----------------------------------------------------------------------------------------------------
